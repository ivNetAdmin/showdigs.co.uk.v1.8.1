<div class="form-horizontal col-md-12 owner-detail">
    <div class="col-md-2">
        <h4>Tag</h4>
        <hr />
    </div>
    <div class="col-md-8">
        <input class="form-control text-box single-line" ng-model="tagText" id="tagText" type="text" />
    </div>
    <div class="col-md-2">
        <input type="button" value="Add" class="btn btn-info" ng-click="addTag()">
    </div>
</div>
<div class="form-horizontal col-md-12 owner-detail">
    <table tr-ng-grid='' items='tagList' enable-filtering="false" enable-sorting="false">
        <thead>
            <tr>
                <th field-name="Id" display-name="" display-align="right"></th>
                <th field-name="Name" display-name="Name"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <i class="btn btn-danger icon-trash icon-white" ng-click="removeTag(gridItem)" rel="tooltip" title="Remove Tag"></i>
                </td>
            </tr>
        </tbody>
    </table>
</div>
