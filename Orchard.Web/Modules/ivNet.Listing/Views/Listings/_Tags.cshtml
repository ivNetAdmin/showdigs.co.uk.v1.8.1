<div class="form-horizontal col-md-12 owner-detail">
    <div class="col-md-12">
        <h4>Tags <i class="btn icon-info info-colour" data-toggle="tooltip" data-placement="right" data-original-title="{{help_tags}} "></i></h4>
        <hr />
    </div>

    <div class="col-md-12">
        <div class="form-group">
            <label class="control-label col-md-2" for="Tag">Tag</label>
            <div class="col-md-10">
                <select ng-options="tag.Name as tag.Name for tag in tagList"
                        ng-model="tag"
                        id="Tag">
                    <option value="">Select</option>
                </select>
            </div>
        </div>
    </div>

    <div class="col-md-offset-2 col-md-10">
        <div class="form-group">
            <div class="col-md-12">
                <input type="button" value="Add Tag" class="btn btn-primary" ng-click="addTag()">
            </div>
        </div>
    </div>

    <div class="col-md-offset-2 col-md-10">
        <div class="form-group">
            <input id="tagList" name="Tags" data-role="tagsinput">
        </div>
    </div>

</div>