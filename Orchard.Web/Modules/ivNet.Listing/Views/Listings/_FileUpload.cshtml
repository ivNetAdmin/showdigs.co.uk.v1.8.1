<div class="form-horizontal col-md-12 owner-detail" id="ImageUploadForm">
    <div class="col-md-12">
        <h4>Images <i class="btn icon-info info-colour" data-toggle="tooltip" data-placement="right" data-original-title="{{help_images}} "></i></h4> You may add {{ImageAllocation}} photos
        <hr />
    </div>

    <div class="col-md-12">
        <div class="form-group">

            <div class="form-group">
                <label class="control-label col-md-2" for="fileupload">File</label>
                <div class="col-md-10">
                    <span class="btn btn-primary fileinput-button">
                        <i class=" glyphicon glyphicon-plus"></i>
                        <span>Upload...</span>
                        <input id="fileupload" type="file" name="files[]" />
                    </span>
                </div>
            </div>
        </div>
    </div>
